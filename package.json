{
  "name": "fab-ui",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "types:check": "fumadocs-mdx && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "lint": "eslint",
    "prettier": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "format": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "prepare": "husky",
    "registry:build": "tsx --tsconfig ./tsconfig.scripts.json ./scripts/build-registry.mts && prettier --log-level silent --write \"registry/**/*.{ts,tsx,json,mdx}\" --cache",
    "lint-staged": "npx lint-staged",
    "test": "echo passed wow amazing"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css}": "prettier --write"
  },
  "dependencies": {
    "@base-ui/react": "1.0.0",
    "@vercel/analytics": "1.6.1",
    "@vercel/speed-insights": "1.3.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "front-matter": "4.0.2",
    "fumadocs-core": "16.4.1",
    "fumadocs-mdx": "14.2.3",
    "fumadocs-ui": "16.4.1",
    "geist": "1.5.1",
    "husky": "9.1.7",
    "jotai": "2.16.0",
    "lucide-react": "0.562.0",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rehype-pretty-code": "0.14.1",
    "rimraf": "6.1.2",
    "shadcn": "3.6.2",
    "shiki": "3.19.0",
    "tailwind-merge": "3.4.0",
    "ts-morph": "27.0.2",
    "tsx": "4.21.0",
    "tw-animate-css": "1.4.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@tailwindcss/postcss": "4.1.18",
    "@types/mdx": "2.0.13",
    "@types/node": "24.10.4",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "10.1.8",
    "lint-staged": "16.2.7",
    "postcss": "8.5.6",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.7"
    },
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "@vercel/speed-insights",
      "esbuild",
      "msw",
      "sharp",
      "unrs-resolver"
    ]
  },
  "pre-commit": "lint-staged",
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "lf",
    "printWidth": 80,
    "jsxSingleQuote": true,
    "importOrder": [
      "<BUILTIN_MODULES>",
      "",
      "^(react/(.*)$)|^(react$)",
      "",
      "<THIRD_PARTY_MODULES>",
      "^types$",
      "^@/env(.*)$",
      "",
      "^@/types/(.*)$",
      "^@/config/(.*)$",
      "^@/lib/(.*)$",
      "^@/hooks/(.*)$",
      "",
      "^@/components/ui/(.*)$",
      "^@/components/(.*)$",
      "",
      "^@/styles/(.*)$",
      "^@/app/(.*)$",
      "",
      "^[./]"
    ],
    "importOrderTypeScriptVersion": "5.3.2",
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "decorators-legacy"
    ],
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "./app/global.css"
  }
}
